<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bookjacket1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Book Title"
        android:textStyle="bold"
        android:id="@+id/booktiltle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bookjacket1"
        android:layout_toEndOf="@+id/bookjacket1"
        android:layout_toRightOf="@+id/bookjacket1"
        />

    <TextView
        android:textSize="18dp"

        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bookjacket1"
        android:layout_toEndOf="@+id/bookjacket1"
        android:layout_toRightOf="@+id/bookjacket1"
        android:text="Price" />

    <TextView
        android:textSize="15dp"
        android:textStyle="italic"
        android:id="@+id/bookView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price1"
        android:layout_alignBottom="@+id/price1"
        android:layout_toEndOf="@+id/price1"
        android:layout_toRightOf="@+id/price1"
        android:text="Views" />
</RelativeLayout>